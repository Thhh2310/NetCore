    ViewData["Title"] = "Details";
}

<h1>Details Product</h1>

<div class="row">

    <div class="col-md-6">
        <div class="input-group mb-3">
            <label asp-for="Id" class="input-group-text">Id</label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="Name" class="input-group-text">Name</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="Description" class="input-group-text">Description</label>
            <input asp-for="Description" class="form-control" readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="Price" class="input-group-text">Price</label>
            <input asp-for="Price" class="form-control" readonly />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="SalePrice" class="input-group-text">SalePrice</label>
            <input asp-for="SalePrice" class="form-control" readonly />
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="Image" class="input-group-text">Image</label>
            <img src="@Model.Image" alt="@Model.Name" style="width:10rem" />
            <input asp-for="Image" class="form-control" readonly />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <label asp-for="CategoryId" class="input-group-text">CategoryId</label>
            @*<input asp-for="CategoryId" class="form-control" readonly />*@
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId" readonly></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="input-group mb-3 ">
            <label asp-for="Status" class="control-label pe-2"></label>
            <input type="radio" asp-for="Status" id="Show" value="true" readonly />
            <label for="Show" class="pe-2">Show</label>
            <input type="radio" asp-for="Status" id="Hide" value="false" readonly />
            <label for="Hide">Hide</label>
        </div>
    </div>

