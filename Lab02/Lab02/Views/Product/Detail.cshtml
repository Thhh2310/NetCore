@{
    ViewData["Title"] = "Detail";
    var products = ViewBag.product;
}
<h2>Chi tiết sản phẩm</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@products.Image" alt="" style="width: 100%" />
    </div>
    <div class="col-md-8">
        <h2>Sản phẩm: @products.Name</h2>
        <h3>Giá gốc: @products.Price  Giá mới: @products.SalePrice</h3>
        <h3>Mô tả: 
            @products.Description
        </h3>
        <h3>Trạng thái: @products.Status</h3>
        <h3>Ngày đăng: @products.CreatedAt</h3>
        <p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-danger">Về trang chủ</a>
        </p>
    </div>
</div>
