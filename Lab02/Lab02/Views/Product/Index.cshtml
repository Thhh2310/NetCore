@{
    ViewData["Title"] = "Index";
    var products = ViewBag.products;
}
<div class="container d-flex">
<div class="col-md-3">
    <h3>DANH MỤC</h3>
    <div class="table">
        <ul>
            <li>Quần áo</li>
            <li>Túi xách</li>
            <li>Đồng hồ</li>
            <li>Ti vi</li>
            <li>Tủ lạnh</li>
