        </ul>
    </div>
</div>
<div class="row">
    <h3>Danh sách sản phẩm</h3>
    @foreach (var item in products)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Image" alt="" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>
                        @item.Description
                    </p>
                    <p>
                        <a asp-route="detail" asp-route-id="@item.Id" class="btn btn-success">Chi tiết</a>
                    </p>
                </div>
            </div>
        </div>
    }
